<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           elementFormDefault="qualified">

    <xs:element name="BatchStatus" type="BatchStatusComplexType"/>

    <xs:complexType name="BatchStatusComplexType">
        <xs:sequence>
            <xs:element name="Id" type="uuid"/>
            <xs:element name="NoticeId" type="uuid"/>
            <xs:element name="Status" type="batchStatusEnum"/>
        </xs:sequence>
    </xs:complexType>

    <xs:simpleType name="uuid">
        <xs:restriction base="xs:token"/>
    </xs:simpleType>

    <xs:simpleType name="batchStatusEnum">
        <xs:restriction base="xs:token">
            <xs:enumeration value="pending"/>
            <xs:enumeration value="processing"/>
            <xs:enumeration value="error"/>
            <xs:enumeration value="complete"/>
        </xs:restriction>
    </xs:simpleType>
</xs:schema>